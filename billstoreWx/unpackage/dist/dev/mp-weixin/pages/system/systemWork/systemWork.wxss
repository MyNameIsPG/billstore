.header-bar {
  position: relative;
  height: 200rpx;
}
.header-bar .header-userinfo {
  height: 100%;
  padding: 0rpx 40rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.header-bar .header-userinfo image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
}
.header-bar .header-userinfo text {
  color: #333;
  margin-left: 20rpx;
  font-size: 30rpx;
}

